@page
@model zSkinCareBookingFE_RazorPage.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
}

<div class="login-container">
	<h2>Đăng nhập</h2>

	<form method="post">
		<div class="form-group">
			<label for="UserName">Tên đăng nhập</label>
			<input type="text" asp-for="LoginRequest.UserName" class="form-control" placeholder="Nhập tên đăng nhập" required />
			<span asp-validation-for="LoginRequest.UserName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label for="Password">Mật khẩu</label>
			<input type="password" asp-for="LoginRequest.Password" class="form-control" placeholder="Nhập mật khẩu" required />
			<span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>

		@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
		{
			<div class="alert alert-danger mt-3">@ViewData["ErrorMessage"]</div>
		}
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}